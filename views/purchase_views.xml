<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="blautech_purchase_order_form" model="ir.ui.view">
            <field name="name">blautech.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <page name="purchase_delivery_invoice" position="after">
                    <page name="proyectos" string="Proyectos">
                        <group>
                            <field name="proyecto_ids" mode="tree" attrs="{'readonly': [('state','not in',['draft'])]}">
                                <tree string="Proyectos" editable="bottom">
                                    <field name="proyecto_id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>

</odoo>
